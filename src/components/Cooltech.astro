<style>
  .cooltech {
    background-color: var(--color-gray-soft);
    padding: 8rem 0;
    overflow: hidden;
  }

  .cooltech-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 4rem;
  }

  /* Contenido */
  .cooltech-content {
    max-width: 550px;
  }

  .cooltech-label {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-gray-light);
    margin-bottom: 1rem;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-gray-light);
  }

  .cooltech-title {
    font-family: var(--font-titles);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    color: var(--color-black);
    margin-bottom: 0.5rem;
  }

  .cooltech-title em {
    font-style: italic;
    color: var(--color-gray-medium);
  }

  .cooltech-subtitle {
    font-family: var(--font-titles);
    font-size: clamp(1.25rem, 2vw, 1.5rem);
    font-weight: 400;
    color: var(--color-gray-medium);
    margin-bottom: 2rem;
  }

  .cooltech-subtitle strong {
    font-weight: 600;
    color: var(--color-black);
  }

  .cooltech-text {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 300;
    line-height: 1.9;
    color: var(--color-gray-medium);
    margin-bottom: 1rem;
  }

  .cooltech-text strong {
    font-weight: 500;
    color: var(--color-black);
  }

  /* Beneficios */
  .cooltech-benefits {
    list-style: none;
    margin: 2rem 0;
    padding: 0;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-body);
    font-size: 0.9375rem;
    color: var(--color-gray-medium);
    margin-bottom: 0.75rem;
  }

  .benefit-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  .benefit-icon svg {
    width: 100%;
    height: 100%;
  }

  .cooltech-cta {
    margin-top: 1rem;
  }

  /* Visual */
  .cooltech-visual {
    position: relative;
  }

  .visual-frame {
    position: relative;
    aspect-ratio: 9/16;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: var(--shadow-soft);
  }

  .instagram-embed {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .instagram-embed iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  /* Badge estadística */
  .stats-badge {
    position: absolute;
    bottom: -20px;
    left: -20px;
    background-color: var(--color-white);
    padding: 1.5rem 2rem;
    box-shadow: var(--shadow-soft);
    text-align: center;
  }

  .stats-number {
    display: block;
    font-family: var(--font-titles);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-black);
    line-height: 1;
  }

  .stats-text {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gray-light);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .cooltech-container {
      grid-template-columns: 1fr;
      gap: 3rem;
      padding: 0 2rem;
    }

    .cooltech-content {
      max-width: 100%;
      order: 2;
    }

    .cooltech-visual {
      order: 1;
      max-width: 500px;
      margin: 0 auto;
    }
  }

  @media (max-width: 640px) {
    .cooltech {
      padding: 5rem 0;
    }

    .stats-badge {
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      padding: 1rem 1.5rem;
    }

    .stats-number {
      font-size: 2rem;
    }
  }
</style>
